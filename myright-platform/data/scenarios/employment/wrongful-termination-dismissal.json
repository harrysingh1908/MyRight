{
  "id": "wrongful-termination-dismissal",
  "title": "Wrongful Termination or Unfair Dismissal",
  "description": "When you are terminated from employment without proper cause, due process, or in violation of labor laws",
  "category": "employment",
  "severity": "high",
  "rights": [
    {
      "id": "right-to-due-process",
      "title": "Right to Fair Hearing Before Termination",
      "description": "Right to proper notice, opportunity to explain, and due process before dismissal",
      "legalBasis": "Industrial Disputes Act, 1947",
      "section": "Section 25F"
    },
    {
      "id": "right-to-notice-compensation",
      "title": "Right to Notice Period or Compensation",
      "description": "Right to proper notice period as per contract or compensation in lieu of notice",
      "legalBasis": "Industrial Employment (Standing Orders) Act, 1946",
      "section": "Section 13"
    },
    {
      "id": "right-to-reinstatement",
      "title": "Right to Seek Reinstatement",
      "description": "Right to approach labor court for reinstatement if termination is found illegal",
      "legalBasis": "Industrial Disputes Act, 1947",
      "section": "Section 11A"
    }
  ],
  "actionSteps": [
    {
      "id": "step-1",
      "title": "Preserve Termination Documents", 
      "description": "Collect and safely store termination letter, employment contract, and all related documents",
      "order": 1,
      "timeframe": "immediate",
      "required": true,
      "difficulty": "easy",
      "estimatedTime": "1 hour",
      "cost": "free"
    },
    {
      "id": "step-2",
      "title": "Review Employment Terms",
      "description": "Examine employment contract for notice period, termination clauses, and procedural requirements",
      "order": 2,
      "timeframe": "within 2 days",
      "required": true,
      "difficulty": "medium",
      "estimatedTime": "2-3 hours",
      "cost": "free"
    },
    {
      "id": "step-3",
      "title": "Send Legal Notice to Employer",
      "description": "Send formal legal notice challenging wrongful termination and demanding reinstatement",
      "order": 3,
      "timeframe": "within 30 days",
      "required": true,
      "difficulty": "medium", 
      "estimatedTime": "1 day",
      "cost": "₹2,000-5,000"
    },
    {
      "id": "step-4",
      "title": "File Complaint with Labour Court",
      "description": "If employer doesn't respond, file formal complaint with appropriate labour court or tribunal",
      "order": 4,
      "timeframe": "within 45 days of termination",
      "required": false,
      "difficulty": "high",
      "estimatedTime": "3-5 days",
      "cost": "₹5,000-15,000"
    }
  ],
